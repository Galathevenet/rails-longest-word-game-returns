<div class="container">
  <h1>Find the longest word you can make with :</h1>
  <div class="letters">
    <% @letters.each do |letter| %>
      <div class="letterbox"><%= letter %></div>
    <% end %>
  </div>

  <form action="/score" method="post">
    <input type="text" name="word" placeholder="Type your word here">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input type="submit" value="Play" class="btn btn-secondary">
  </form>
</div>
